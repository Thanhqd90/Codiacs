<div class="container" id="container">
  <!--Grid row-->
  <div class="row">
    <!--Card-->
    <div class="card mb-2 expand">
      <div class="card-header font-weight-bold">
        <div class="row">
          <div class="col-md-12">
            <h1 class="h1-responsive font-weight-bold text-white text-center pt-2">ALL BLOGS</h1>
          </div>
        </div>
      </div>

      <!--Card content-->
      <div class="card-body blog">
        <div class="row">
          <div class="col-md-12">
            <h1 class="errorHeading" id="errorHeading"></h1>
            {{#each data}}
            <div class="expand">
              <hr class="style2">
              <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                  <h1 id="title" class="text-center">
                    <u>{{title}}</u>
                  </h1>
                </div>
              </div>
              <hr class="style2">
              <h5 class="mt-3" id="category">
                <i class="fa fa-tag blue-text" aria-hidden="true"></i>
                <u>CATEGORY</u>
              </h5>
              <p>{{category}}</p>

              <h2 id="place" class="mt-5">
                <i class="fa fa-hotel blue-text" aria-hidden="true"></i>
                <u>PLACE</u>
              </h2>
              <p class="white-text">{{stayAt}}, {{cityVisited}}, {{countryVisited}}</p>
              <h2 id="experience" class="mt-5">
                <i class="fa fa-suitcase blue-text" aria-hidden="true"></i>
                <u>EXPERIENCE</u>
              </h2>
              <p class="white-text mb-5">{{experience}}</p>
              <h5>
                <i class="fa fa-pencil blue-text" aria-hidden="true"></i> Written by: {{bloggerPersonalInfo.firstName}} {{bloggerPersonalInfo.lastName}}</h5>
              <p class="white-text">Contact
                <i class="fa fa-envelope blue-text mb-5" aria-hidden="true"></i> {{bloggerPersonalInfo.email}}</p>
            </div>
             {{/each}}
          </div>
        </div>
      </div>
    </div>
    <!--/.Card-->
  </div>
</div>