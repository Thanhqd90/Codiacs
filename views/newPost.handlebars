<head>
    <link rel="stylesheet" href="/assets/css/newPost.css">
    <!-- Custom Script -->
    <script src="/assets/js/register.js" type="text/javascript"></script>
</head>

<div id="formbg">
    <!-- Default form register -->
    <form id="blog-form" action="/blog/create" method="POST" class="text-center border border-light p-5">

        <div class="form-row mb-4 justify-content-center">
            <div class="col-md-5">
                <label class="h3" for="inputPrefilledEx">TITLE</label>
                <!-- title-->
                <input type="text" id="title" id="inputPrefilledEx" class="form-control" value="My Experience">
            </div>
        </div>

        <div class="row">
            {{!-- country visited --}}
            <div class="col-md-4">
                <div class="form-group border-focus">
                    <label class="h4" for="countryVisited">COUNTRY VISITED</label>
                    <textarea class="form-control" id="countryVisited" rows="1"></textarea>
                </div>
            </div>
            {{!-- city visited --}}
            <div class="col-md-4">
                <div class="form-group border-focus">
                    <label class="h4" for="cityVisited">CITY VISITED</label>
                    <textarea class="form-control" id="cityVisited" rows="1"></textarea>
                </div>
            </div>
            {{!-- place/places stayed at --}}
            <div class="col-md-4">
                <div class="form-group border-focus">
                    <label class="h4" for="stayAt">STAYED AT</label>
                    <textarea class="form-control" id="stayAt" rows="2"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            {{!-- places visited --}}
            <div class="col-md-4">
                <div class="form-group border-focus">
                    <label class="h4" for="placesVisited">PLACES VISITED</label>
                    <textarea class="form-control" id="placesVisited" rows="2"></textarea>
                </div>
            </div>
            {{!-- best time to visit --}}
            <div class="row justify-content-center ml-5 mt-5">
                <div class=" m-2">
                    <select id="bestTime" class="mdb-select p-2">
                        <option value="" disabled selected>BEST TIME TO VISIT</option>
                        <option value="Jan">Jan</option>
                        <option value="Feb">Feb</option>
                        <option value="Mar">Mar</option>
                        <option value="Apr">Apr</option>
                        <option value="May">May</option>
                        <option value="Jun">Jun</option>
                        <option value="Jul">Jul</option>
                        <option value="Aug">Aug</option>
                        <option value="Sep">Sep</option>
                        <option value="Oct">Oct</option>
                        <option value="Nov">Nov</option>
                        <option value="Dec">Dec</option>
                    </select>
                </div>

                {{!-- image upload --}}
                <div class="">
                    <div class=" m-2">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text black-text" id="inputGroupFileAddon01">TRAVEL PHOTOS</span>
                            </div>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="photos" aria-describedby="inputGroupFileAddon01">
                                <label class="custom-file-label" for="photos"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row justify-content-center">
            <h4>CATEGORY OF YOUR EXPERIENCE</h4>
        </div>
        <div class="row">
            <section class="my-5 col-md-12">
                <!-- Default unchecked -->
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
                                    <label class="custom-control-label" for="defaultUnchecked">Amusement</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="defaultUnchecked1">
                                    <label class="custom-control-label" for="defaultUnchecked1">Entertainment</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="defaultUnchecked2">
                                    <label class="custom-control-label" for="defaultUnchecked2">Romantic</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <hr>

        <div class="row">
            {{!-- must haves for trip --}}
            <div class="col-md-3">
                <div class="form-group border-focus">
                    <label class="h4" for="mustHaves">ITEMS NEEDED FOR THE TRIP</label>
                    <textarea class="form-control" id="mustHaves" rows="2"></textarea>
                </div>
            </div>
            {{!-- experience --}}
            <div class="col-md-9">
                <div class="form-group border-focus">
                    <label class="h4" for="experience">ABOUT YOUR EXPERIENCE</label>
                    <textarea class="form-control" id="experience" rows="10"></textarea>
                </div>
            </div>

        </div>
        <!-- Default unchecked -->
        <div class="row  justify-content-center">
            <select id="isVisible" value="varify" class="browser-default custom-select col-md-3">
                <option selected>MAKE BLOG PUBLIC/PRIVATE</option>
                <option value="1">PUBLIC</option>
                <option value="0">PRIVATE</option>
            </select>
        </div>
        <button type="submit" class="btn btn-lg black-text">FINISH</button>
        <a href="/blog/new"class="btn btn-lg black-text">CLEAR</a>
    </form>
</div>

